<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.myapplication.MainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/statusBarOnDuty"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"></LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/statusBar"
                android:background="@drawable/status_bar"
                android:text="@string/on_duty"
                android:id="@+id/textNotAssigned2" />
        </LinearLayout>


        <RelativeLayout
            style="@style/cardNormal"
            android:background="@drawable/card_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardLayout07"
            android:layout_below="@+id/statusBarOnDuty"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/linearLayout10"
                android:padding="0dp"
                android:weightSum="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:layout_marginRight="9dp"
                    android:background="@mipmap/ic_no_pic"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/linearLayout11">

                        <TextView
                            style="@style/driverNameLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bradley Jones"
                            android:id="@+id/textView16"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="5dp" />

                        <TextView
                            style="@style/online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online"
                            android:id="@+id/textView17"
                            android:layout_alignBaseline="@+id/textView16"
                            android:layout_alignBottom="@+id/textView16"
                            android:layout_toRightOf="@+id/textView16"
                            android:layout_toEndOf="@+id/textView16" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout11">

                        <TextView
                            style="@style/textBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID# 9714"
                            android:textSize="15sp"
                            android:id="@+id/textView36"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/linearLayout11"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="top">
                    <Button
                        style="@style/rightArrowStyle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@mipmap/ic_more"
                        android:id="@+id/button4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/statusBarOffDuty"
            android:layout_below="@+id/cardLayout07"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"></LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/statusBar"
                android:background="@drawable/status_bar"
                android:text="@string/off_duty"
                android:id="@+id/textNotAssigned1" />
        </LinearLayout>

        <RelativeLayout
            style="@style/cardNormal"
            android:background="@drawable/card_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardLayout08"
            android:layout_below="@+id/statusBarOffDuty"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/linearLayout14"
                android:padding="0dp"
                android:weightSum="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView2"
                    android:layout_marginRight="9dp"
                    android:background="@mipmap/ic_no_pic" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/linearLayout13" >

                        <TextView
                            style="@style/driverNameLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bradley Jones"
                            android:id="@+id/textView18"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="5dp" />

                        <TextView
                            style="@style/offline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offline"
                            android:id="@+id/textView19"
                            android:layout_alignBaseline="@+id/textView18"
                            android:layout_alignBottom="@+id/textView18"
                            android:layout_toRightOf="@+id/textView18"
                            android:layout_toEndOf="@+id/textView18" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout13" >

                        <TextView
                            style="@style/textBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID# 9714"
                            android:textSize="15sp"
                            android:id="@+id/textView20"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/linearLayout13"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="top" >

                    <Button
                        style="@style/rightArrowStyle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@mipmap/ic_more"
                        android:id="@+id/button5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>