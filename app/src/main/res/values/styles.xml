<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="textColorPrimary">@color/textColorPrimary</item>-->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="buttonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="rightArrowStyle" parent="@style/Widget.AppCompat.Button.Borderless"></style>

    <style name="buttonStyleInactive" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="dialogMessage">

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="menuList" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="horzLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#979797</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="horzLineDetails" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#979797</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="vertLine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#979797</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>

    </style>


    <style name="btnPrimary" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_primary_states</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="btnPrimaryInactive" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/btn_primary_inactive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="btnPrimaryRounded" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_primary_states</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="btnSecondary" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_secondary_states</item>
        <item name="android:textStyle">normal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="btnSecondaryDisabled" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_disabled_states</item>
        <item name="android:textStyle">normal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="statusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
